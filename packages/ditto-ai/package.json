  "homepage": "https://ditto.run",
  "bugs": {
    "url": "https://github.com/ditto-run/ditto-ai/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "effect": "^3.0.0"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^22.0.0"
